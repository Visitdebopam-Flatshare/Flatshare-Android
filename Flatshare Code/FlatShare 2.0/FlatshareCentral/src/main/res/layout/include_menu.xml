<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_height"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:alpha="@integer/alpha_dialog_bg"
        android:background="#767676" />

    <LinearLayout
        android:id="@+id/ll_menu_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/menu_width"
                android:layout_height="@dimen/menu_width"
                android:src="@drawable/ic_menu_explore" />

            <TextView
                android:id="@+id/txt_menu_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_medium"
                android:text="Search"
                android:textColor="@color/grey3"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/menu_width"
                android:layout_height="@dimen/menu_width"
                android:src="@drawable/ic_menu_check" />

            <TextView
                android:id="@+id/txt_menu_checks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_medium"
                android:text="Requests"
                android:textColor="@color/grey3"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/menu_width"
                android:layout_height="@dimen/menu_width"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_chat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_menu_chats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_medium"
                    android:text="Chats"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/_10sdp" />

                <View
                    android:id="@+id/view_menu_chat_circle"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/drawable_button_blue_circle"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPhoto"
                android:layout_width="@dimen/menu_width"
                android:layout_height="@dimen/menu_width"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_photo"
                android:layout_width="@dimen/menu_width"
                android:layout_height="@dimen/menu_width"
                android:background="@drawable/drawable_blue_circle"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_menu_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_medium"
                android:text="Profile"
                android:textColor="@color/grey3"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>