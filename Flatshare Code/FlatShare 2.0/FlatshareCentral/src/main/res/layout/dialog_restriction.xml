<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet_verified"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/drawable_bottomsheet"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="#FFF2EC"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    app:strokeWidth="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:fontFamily="@font/font_semibold"
                        android:text="You've used all the free chat request."
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_12sdp" />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/grey6"
                            app:cardCornerRadius="@dimen/_40sdp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:src="@drawable/ic_menu_check"
                                app:tint="@color/blue_dark" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/font_bold"
                            android:text="Chat Requests"
                            android:textColor="@color/blue_dark"
                            android:textSize="@dimen/_24sdp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/font_medium"
                        android:text="Always seen."
                        android:textColor="@color/blue_dark"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:weightSum="3.1">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_week_1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_110sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false"
                            app:strokeColor="@color/blue_dark"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_elite_desc_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="center"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="@dimen/_12sdp" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    app:cardBackgroundColor="#E8E9FF"
                                    app:cardCornerRadius="@dimen/_50sdp"
                                    app:strokeWidth="0dp">

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:src="@drawable/ic_menu_check"
                                        app:tint="@color/blue_dark" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/txt_price_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="@dimen/_16sdp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_week_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false"
                            app:strokeColor="@color/blue_dark"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@color/blue_dark"
                                    android:fontFamily="@font/font_regular"
                                    android:gravity="center"
                                    android:paddingVertical="@dimen/_3sdp"
                                    android:text="Most Popular"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11sdp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_elite_desc_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font_semibold"
                                        android:gravity="center"
                                        android:textColor="@color/blue_dark"
                                        android:textSize="@dimen/_12sdp" />

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/_5sdp"
                                        app:cardBackgroundColor="#E8E9FF"
                                        app:cardCornerRadius="@dimen/_50sdp"
                                        app:strokeWidth="0dp">

                                        <ImageView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="center"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:src="@drawable/ic_menu_check"
                                            app:tint="@color/blue_dark" />
                                    </com.google.android.material.card.MaterialCardView>


                                    <TextView
                                        android:id="@+id/txt_price_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/font_semibold"
                                        android:textColor="@color/blue_dark"
                                        android:textSize="@dimen/_16sdp" />

                                </LinearLayout>
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_week_3"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_110sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false"
                            app:strokeColor="@color/blue_dark"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_elite_desc_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="center"

                                    android:textColor="@color/blue_dark"
                                    android:textSize="@dimen/_12sdp" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    app:cardBackgroundColor="#E8E9FF"
                                    app:cardCornerRadius="@dimen/_50sdp"
                                    app:strokeWidth="0dp">

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:src="@drawable/ic_menu_check"
                                        app:tint="@color/blue_dark" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/txt_price_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"

                                    android:textColor="@color/blue_dark"
                                    android:textSize="@dimen/_16sdp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <com.joinflatshare.customviews.CustomButton
                        android:id="@+id/btn_continue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/drawable_button_elite"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="@font/font_semibold"
                        android:text="Continue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/button_text_size" />

                    <LinearLayout
                        android:id="@+id/ll_elite_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="0.45"
                                android:background="@color/grey5" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/font_semibold"
                                android:gravity="center"
                                android:text=" OR "
                                android:textColor="@color/grey5"
                                android:textSize="@dimen/_12sdp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="0.45"
                                android:background="@color/grey5" />

                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_elite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false"
                            app:strokeColor="@color/elite_blue"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="center"
                                    android:text="Get 25 chat requests every week"
                                    android:textColor="@color/elite_blue"
                                    android:textSize="@dimen/_10sdp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:src="@drawable/ic_elite"
                                        app:tint="@color/elite_blue" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:fontFamily="@font/font_semibold"
                                        android:gravity="center"
                                        android:text="Join Flatshare Elite"
                                        android:textColor="@color/elite_blue"
                                        android:textSize="@dimen/_16sdp" />

                                </LinearLayout>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>