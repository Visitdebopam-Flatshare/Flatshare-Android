<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_profile_button_holder"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_70sdp"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/llProfileSharedFlat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:strokeWidth="2dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/flat_buttons"
        app:cardCornerRadius="@dimen/_5sdp">

        <ImageView
            android:id="@+id/img_profile_button"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/txt_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/font_semibold"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="Shared Flat\nSearch"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/_12sdp" />
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/v1"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="match_parent" />
</LinearLayout>