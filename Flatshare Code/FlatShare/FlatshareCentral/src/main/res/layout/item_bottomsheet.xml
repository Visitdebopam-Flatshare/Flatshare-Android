<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_15sdp">

        <LinearLayout
            android:id="@+id/ll_bottom_count_holder"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/drawable_blue_circle"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_bottom_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_bold"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/ll_bottom_count_holder"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_bottomsheet"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_bottom_rounded"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:riv_corner_radius="@dimen/_3sdp"
                app:riv_mutate_background="false"
                app:riv_tile_mode="clamp" />

            <TextView
                android:id="@+id/txt_bottomsheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/color_text_primary"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:id="@+id/view_botton_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@color/divider" />

</LinearLayout>