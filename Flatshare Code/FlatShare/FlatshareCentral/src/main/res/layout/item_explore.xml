<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:background="@color/bg_my_flat_option" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/feed_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/img_option"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|end">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_threedots" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_explore_name_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/img_option"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_profile"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        app:riv_border_color="@color/color_hint"
                        app:riv_border_width="@dimen/_1sdp"
                        app:riv_corner_radius="@dimen/_10sdp"
                        app:riv_mutate_background="true"
                        app:riv_tile_mode="clamp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_bold"
                            android:textColor="@color/color_text_primary"
                            android:textSize="@dimen/_14sdp" />

                        <ImageView
                            android:id="@+id/img_profile_verified"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/ic_tick_verified"
                            android:visibility="gone" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/font_regular"
                        android:text="•"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_fscore" />

                    <TextView
                        android:id="@+id/txt_fscore_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:fontFamily="@font/font_regular"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/font_regular"
                        android:text="•"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txt_user_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/font_regular"
                        android:text="•"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/txt_user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/font_regular"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_explore_name_flat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/img_option"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/txt_roomtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_bold"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/txt_dot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:fontFamily="@font/font_regular"
                        android:text="•"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txt_roomsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txt_dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:fontFamily="@font/font_regular"
                        android:text="•"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_fscore" />

                    <TextView
                        android:id="@+id/txt_fscore_flat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:fontFamily="@font/font_regular"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_explore_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/item_profile_image" />

            <FrameLayout
                android:id="@+id/frame_vp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_explore"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:clickable="false" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    app:tabBackground="@drawable/drawable_tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorGravity="bottom"
                    app:tabIndicatorHeight="0dp"
                    app:tabPaddingEnd="@dimen/_10sdp" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_explore_lock"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/ic_lock" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_explore_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_small"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardNotInterested"
                            android:layout_width="@dimen/button_height_small"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/pink"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/ic_cross_red" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardLike"
                            android:layout_width="@dimen/button_height_small"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/color_blue_light"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/imgLike"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_8sdp"
                                android:src="@drawable/ic_tick_blue_fat" />

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_reveal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_small"
                        android:layout_centerInParent="true"
                        android:background="@drawable/drawable_button_black"
                        android:fontFamily="@font/font_bold"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:text="Reveal"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_chat_request"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_small"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:background="@drawable/drawable_button_black"
                        android:fontFamily="@font/font_bold"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:text="Chat Request"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_like"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_like" />
    </FrameLayout>


</LinearLayout>