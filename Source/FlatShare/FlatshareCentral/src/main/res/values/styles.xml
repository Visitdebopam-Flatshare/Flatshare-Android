<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3D5A6C</item>
        <item name="colorPrimaryDark">#3D5A6C</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <!-- Full Screen theme. -->
    <style name="AppThemeFullScreen" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--DIALOG-->

    <style name="themeTransparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogTheme" parent="themeTransparent">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="DialogBottomPopUpTheme" parent="themeTransparent">
        <item name="android:windowAnimationStyle">@style/AnimationBottomPopUp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowActionBar">false</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AnimationBottomPopUp">
        <item name="android:windowEnterAnimation">@anim/bottompopout</item>
        <item name="android:windowExitAnimation">@anim/bottompopdown</item>
    </style>

    <!--DIALOG ENDS-->


    <!--SWITCH THEME-->
    <style name="ThemeSwitch" parent="AppTheme">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/color_grey_icon</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/color_grey_icon</item>
    </style>
</resources>