<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_10sdp">

    <TextView
            android:fontFamily="@font/font_regular"
        android:id="@+id/txt_not_interested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Not Interested in the flat"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/_12sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/divider" />

    <TextView
            android:fontFamily="@font/font_regular"
        android:id="@+id/txt_inappropriate_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Inappropriate messages"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/_12sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/divider" />

    <TextView
            android:fontFamily="@font/font_regular"
        android:id="@+id/txt_inappropriate_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Inappropriate photos"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/_12sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/divider" />

    <TextView
            android:fontFamily="@font/font_regular"
        android:id="@+id/txt_fake_flat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Seems like a fake flat"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>